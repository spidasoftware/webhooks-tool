<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Channel</th>
          <th>Event Filter</th>
          <th>Script</th>
          <th><a class="tiny button right inline" {{action 'new'}}>New</a></th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedWebhooks as |webhook|}}
          <tr>
            <td>{{webhook.name}}</td>
            <td>{{webhook.channel}}</td>
            <td>{{webhook.eventFilter}}</td>
            <td>{{webhook.script}}</td>
            <td>
              <ul class="button-group right">
                <li><a class="tiny button" {{action 'edit' webhook}}>Edit/View</a></li>
                <li><a class="tiny button" {{action 'delete' webhook}}>Delete</a></li>
                {{#if webhook.isDirty}}
                  <li><a class="tiny button" {{action 'save' webhook}}>Save</a></li>
                {{/if}}
              </ul>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

